<h1>User Profile </h1>
<p>Hi, <%= @user.email %> </p>

<h2>Events created by this User</h2>
<ul>
    <% if @events.any? %>
        <% @events.each do |event| %>
            <li>
                <%= link_to event.title, event %>
                <% event.created_at.to_formatted_s(:long) %>
            </li>
        <% end %>
    <% else %>
        <p><%= @user.email %> hasn't created any events yet.</p>
    <% end %>
</ul>
